rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to the recipes collection
    // for development purposes.
    // WARNING: These rules are insecure and should be updated with
    // proper authentication checks before production.
    match /recipes/{recipeId} {
      allow read, write: if true;
    }
  }
}
