
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path in the 'recipes' folder.
    // The {userId} wildcard captures the user's ID from the path.
    match /recipes/{userId}/{allPaths=**} {
    
      // Allow public read access to all images.
      allow read: if true;
      
      // Allow create/write access only if the user is authenticated (request.auth != null)
      // AND their UID matches the {userId} in the path.
      // This prevents users from uploading files into another user's folder.
      allow create, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
